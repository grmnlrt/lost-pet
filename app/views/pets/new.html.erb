<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <h1>Create a pet</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-xs-12">
      <% form_for @pet do |f|%>
        <div class="form-group">
          <%= f.label :name %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :species %>
          <%= f.select :species, Pet::SPECIES, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :address %>
          <%= f.text_field :address, class: "form-control" %>
        </div>

        <div class="form-group">
          <%= f.label :date %>
          <%= f.date_field :date, class: "form-control" %>
        </div>

        <%= f.submit class: 'btn btn-primary' %>
      <% end %>

      <%= simple_form_for @pet do |f| %>
        <%= f.input :name%>
        <%= f.input :species, collection: Pet::SPECIES %>
        <%= f.input :address %>
        <%= f.input :date %>
        <%= f.submit class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
